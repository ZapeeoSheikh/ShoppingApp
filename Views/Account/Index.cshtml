@using ShoppingApp.Models
@{
    ViewBag.Title = "Index";
    List<ProductStatus> productStatuses = ViewBag.ProductStatuses as List<ProductStatus>;
    List<User> sellers = ViewBag.Sellers as List<User>;
    List<User> buyers = ViewBag.Buyers as List<User>;
    List<OrderStatus> orderStatus = ViewBag.OrderStatus as List<OrderStatus>;
    List<Product> products = ViewBag.Products as List<Product>;
}




@*//================================ Heading of Index Page =======================================*@

<div class="container-fluid">
    <div class="col-lg-10 jumbotron ">
        <h1 class="text-center ">
            Update DataBase Here
        </h1>
        <p class="text-warning text-center">Click on the collapsible panel to open and close it.</p>
    </div>

    @*//================================ Testing starts here =======================================*@





    @*//================================ Collapse starts here =======================================*@

    <div class="col-lg-3">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse1">Roles Form</a>
                </h4>
            </div>
            <div id="collapse1" class="panel-collapse collapse">
                @*//================================ Form Starts Here =======================================*@

                <div class="panel-body">
                    <form action="/Order/Role" method="post">
                        <div class="form-group">
                            <label for="name"> Role Title :</label>
                            <input type="text" class="form-control" id="name" name="Name">
                        </div>

                        <button type="submit" class="btn btn-primary">Add Now</button>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <div class="col-lg-3">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse7">Product Status Form</a>
                </h4>
            </div>
            <div id="collapse7" class="panel-collapse collapse">




                @*//================================ Form Starts Here =======================================*@
                <div class="panel-body">
                    <form action="/Account/ProductStatus" method="post">
                        <div class="form-group">
                            <label for="name"> Product Name :</label>
                            <input type="text" class="form-control" id="name" name="Name">
                        </div>

                        <button type="submit" class="btn btn-primary">Add Now</button>
                    </form>
                </div>
            </div>





        </div>
    </div>

    <div class="col-lg-3">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse2">User Form </a>
                </h4>
            </div>
            <div id="collapse2" class="panel-collapse collapse">




                @*//================================ Form Starts Here =======================================*@
                <div class="panel-body">
                    <form action="/Order/User" method="post">
                        <div class="form-group">
                            <label for="name"> User Name :</label>
                            <input type="text" class="form-control" id="name" name="Name">
                        </div>
                        <div class="form-group">
                            <label for="email"> User Email :</label>
                            <input type="text" class="form-control" id="email" name="Email">
                        </div>
                        <div class="form-group">
                            <label for="pwd"> User Password :</label>
                            <input type="password" class="form-control" id="pwd" name="Password">
                        </div>
                        <div class="form-group">
                            <label> User Role :</label>
                            <select name="SellerId" class="form-control">
                                <option value="0">- Select Role -</option>
                                @foreach (var item in sellers)
                                {
                                    <option value="@item.Id"> @item.Name</option>

                                }

                            </select>
                        </div>

                        <button type="submit" class="btn btn-danger">Add Now</button>
                    </form>
                </div>






            </div>
        </div>

    </div>
    <div class="col-lg-3">
        <div class="panel panel-primary ">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse3">Products Form</a>
                </h4>
            </div>
            <div id="collapse3" class="panel-collapse collapse">




                @*//================================ Form Starts Here =======================================*@
                <div class="panel-body">
                    <form action="/Account/Product" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="email">Product Name :</label>
                            <input type="text" class="form-control" id="email" name="Name">
                        </div>
                        <div class="form-group">
                            <label for="ps">Product Status Id:</label>
                            <select name="ProductStatusId" class="form-control">
                                <option value="0">- Select Product Status Id -</option>
                                @foreach (var item in productStatuses)
                                {
                                    <option value="@item.Id"> @item.Name</option>

                                }

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="desc">Product Description :</label>
                            <input type="text" class="form-control" id="desc" name="Description">
                        </div>
                        <div class="form-group">
                            <label for="phone">Product Price :</label>
                            <input type="text" class="form-control" id="phone" name="Price">
                        </div>
                        <div class="form-group">
                            <label for="pwd">Product Image :</label>
                            <input type="file" class="form-control" id="pwd" name="file" accept="image/png , image/gif, image/jpeg">
                        </div>
                        <div class="form-group">
                            <label for="si">Seller Id :</label>
                            <select name="SellerId" class="form-control" id="role">
                                <option value="0">- Select Role Id -</option>
                                @foreach (var item in sellers)
                                {
                                    <option value="@item.RoleId"> @item.Name</option>

                                }

                            </select>
                        </div>
                        <button type="submit" class="btn btn-success">Add Now</button>
                    </form>
                </div>






            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse4">Product Images Form</a>
                </h4>
            </div>
            <div id="collapse4" class="panel-collapse collapse">


                @*//================================ Form Starts Here =======================================*@
                <div class="panel-body ">
                    <form action="/Account/ProductImage" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="pi">Product Id :</label>
                            <select name="ProductId" class="form-control">
                                <option value="0">- Select Product Id -</option>
                                @foreach (var item in products)
                                {
                                    <option value="@item.Id"> @item.Name</option>

                                }

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="img">Product Image :</label>
                            <input type="file" class="form-control" id="img" name="file" accept="image/png , image/gif, image/jpeg">
                        </div>
                        <button type="submit" class="btn btn-danger">Add Now</button>
                    </form>
                </div>



            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse5">Orders Form</a>
                </h4>
            </div>
            <div id="collapse5" class="panel-collapse collapse">




                @*//================================ Form Starts Here =======================================*@
                <div class="panel-body ">
                    <form action="/Order/Orders" method="post">
                        <div class="form-group">
                            <label for="date"> Date and Time :</label>
                            <input type="datetime-local" class="form-control" id="date" name="DateTime">
                        </div>
                        <div class="form-group">
                            <label for="cost">Order Status Id :</label>
                            <select name="OrderStatusId" class="form-control">
                                <option value="0">- Select OrderStatus -</option>
                                @foreach (var item in orderStatus)
                                {
                                    <option value="@item.Id"> @item.Name</option>

                                }

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="des">Buyer Id :</label>
                            <select name="BuyerId" class="form-control">
                                <option value="0">- Select Buyer Id -</option>
                                @foreach (var item in buyers)
                                {
                                    <option value="@item.Id"> @item.Name</option>

                                }

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="de">Product Id :</label>
                            <select name="ProductId" class="form-control">
                                <option value="0">- Select Product Id -</option>
                                @foreach (var item in products)
                                {
                                    <option value="@item.Id"> @item.Name</option>

                                }

                            </select>
                        </div>
                        <button type="submit" class="btn btn-warning">Add Now</button>
                    </form>
                </div>



            </div>
        </div>
    </div>
    <div class="col-lg-3">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse6">Order Status Form</a>
                </h4>
            </div>
            <div id="collapse6" class="panel-collapse collapse">




                @*//================================ Form Starts Here =======================================*@
                <div class="panel-body panel-primary">
                    <form action="/Order/OrderStatus" method="post">
                        <div class="form-group">
                            <label for="cnic">Order Status Title :</label>
                            <input type="text" class="form-control" id="cnic" name="Name">
                        </div>

                        <button type="submit" class="btn btn-primary">Add Now</button>
                    </form>
                </div>






            </div>
        </div>
    </div>

</div>