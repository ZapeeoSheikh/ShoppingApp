@using ShoppingApp.Models
@model List<ProductImage>

@{
    ViewBag.Title = "ProductImage";

}


<h2>Product Image List </h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Product Image Id</th>
            <th>Product Id</th>
            <th>Product Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Id</td>

                <td>@i.ProductId</td>

                <td><img src="~/dbImage/@i.Image" alt="Image" height="40" width="auto" /></td>
                <td>
                    <a href="/Account/PIView/@i.Id"><span class="glyphicon glyphicon-eye-open"></span> </a> |
                    <a href="/Account/PIEdit/@i.Id"><span class="glyphicon glyphicon-pencil"></span> </a> |
                    <a href="/Account/PIDelete/@i.Id"><span class="glyphicon glyphicon-trash"></span> </a>
                </td>
            </tr>

        }
    </tbody>
    <tfoot>
        <tr>
            <th>Product Image Id</th>
            <th>Product Id</th>
            <th>Product Image</th>
            <th>Actions</th>
        </tr>
    </tfoot>
</table>