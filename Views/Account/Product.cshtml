@using ShoppingApp.Models
@model List<Product>


<h2>Product List </h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Product Image</th>
            <th>Seller Id</th>
            <th>Product Status Id</th>
            <th>Actions</th>
        </tr>
    </thead>
    @foreach (var i in Model)
    {
        <tbody>
            <tr>
                <td>@i.Id</td>

                <td>@i.Name</td>

                <td>@i.Description</td>

                <td>@i.Price</td>

                <td>@i.Image</td>

                <td>@i.SellerId</td>

                <td>@i.ProductStatusId</td>
                <td>
                    <a href="/Account/PView"><span class="glyphicon glyphicon-eye-open"></span> </a> |
                    <a href="/Account/PEdit"><span class="glyphicon glyphicon-pencil"></span> </a>   |
                    <a href="/Account/PDelete"><span class="glyphicon glyphicon-trash"></span> </a>
                </td>
            </tr>
        </tbody>
    }
</table>