@using ShoppingApp.Models
@model List<Order>


<h2>Order List </h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Date & Time </th>
            <th>Order Status Id</th>
            <th>Buyer Id</th>
            <th>Product Id</th>
            <th>Actions</th>
        </tr>
    </thead>
    @foreach (var i in Model)
    {
        <tbody>
            <tr>
                <td>@i.Id</td>

                <td>@i.DateTime</td>

                <td>@i.OrderStatusId</td>

                <td>@i.BuyerId</td>

                <td>@i.ProductId</td>
                <td>
                    <a href="/Order/OView"><span class="glyphicon glyphicon-eye-open"></span> </a> |
                    <a href="/Order/OEdit"><span class="glyphicon glyphicon-pencil"></span> </a> |
                    <a href="/Order/ODelete"><span class="glyphicon glyphicon-trash"></span> </a>
                </td>
            </tr>
        </tbody>
    }
</table>