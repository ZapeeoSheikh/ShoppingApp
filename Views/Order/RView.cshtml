@using ShoppingApp.Models
@model Role
@{
    ViewBag.Title = "RView";
}

<div class="panel panel-primary container-fluid col-lg-3 col-lg-push-3">
    <div class="panel-heading">Role of ID @Model.Id Details</div>
    <div class="panel-body ">

        <div class="col-lg-push-1" style="padding: 0px 0px 10px 10px">
            <img src="~/images/images-removebg-preview.png" style="height: 250px; width: 250px " />
            <div style="padding: 10px 0px 0px 0px ">
                <p>
                    Role ID : <b>
                        @Model.Id
                    </b>
                </p>
                <p>
                    Role Title :  <b>
                        @Model.Name
                    </b>
                </p>
            </div>
        </div>
    </div>




</div>