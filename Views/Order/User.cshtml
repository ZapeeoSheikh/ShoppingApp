@using ShoppingApp.Models
@model List<User>


<h2>Users List </h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Role Id</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Id</td>

                <td>@i.Name</td>

                <td>@i.RoleId</td>

                <td>@i.Email</td>
                <td>
                    <a href="/Order/UView"><span class="glyphicon glyphicon-eye-open"></span> </a> |
                    <a href="/Order/UEdit"><span class="glyphicon glyphicon-pencil"></span> </a> |
                    <a href="/Order/UDelete"><span class="glyphicon glyphicon-trash"></span> </a>
                </td>
            </tr>
        }
    </tbody>
</table>