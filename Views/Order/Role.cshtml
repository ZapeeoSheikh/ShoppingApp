@using ShoppingApp.Models
@model List<Role>

@{
    ViewBag.Title = "Role";
}


<h2>Roles List </h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Role Id</th>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Id</td>

                <td>@i.Name</td>
                <td>
                    <a href="/Order/RView/@i.Id"><span class="glyphicon glyphicon-eye-open"></span> </a> |
                    <a href="/Order/REdit/@i.Id"><span class="glyphicon glyphicon-pencil"></span> </a> |
                    <a href="/Order/RDelete/@i.Id"><span class="glyphicon glyphicon-trash"></span> </a>
                </td>
            </tr>

        }
    </tbody>
</table>