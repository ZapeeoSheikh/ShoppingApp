@using ShoppingApp.Models
@model List<Orders>

@{
    ViewBag.Title = "Orders";
}


<h2>Order List </h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Date & Time </th>
            <th>Order Status Id</th>
            <th>Buyer Id</th>
            <th>Product Id</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Id</td>

                <td>@i.DateTime</td>

                <td>@i.OrderStatusId</td>

                <td>@i.BuyerId</td>

                <td>@i.ProductId</td>
                <td>
                    <a href="/Order/OView/@i.Id"><span class="glyphicon glyphicon-eye-open"></span> </a> |
                    <a href="/Order/OEdit/@i.Id"><span class="glyphicon glyphicon-pencil"></span> </a> |
                    <a href="/Order/ODelete/@i.Id"><span class="glyphicon glyphicon-trash"></span> </a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Id</th>
            <th>Date & Time </th>
            <th>Order Status Id</th>
            <th>Buyer Id</th>
            <th>Product Id</th>
            <th>Actions</th>
        </tr>
    </tfoot>
</table>